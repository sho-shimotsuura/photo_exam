<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @picture, local: true) do |form| %>
  <%= form.hidden_field :content %>

  <p>投稿内容:<%= @picture.content %></p>
  <p>画像:<%= @picture.image %></p>

  <%= image_tag(@picture.image.url, size:'400x400') if @picture.image && @picture.image.url %>
  <%= form.hidden_field :image_cache %>

  <%= form.submit  "登録する" %>
<% end %>


<%= form_with(model:@picture, url:new_picture_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "戻る", name: "back" %>
<% end %>