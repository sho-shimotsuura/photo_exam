<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.user.name %></td>
        <td><%= picture.content %></td>
        <td><%= image_tag picture.image_url, size:'200x200' if picture.image.present? %></td>
        <td><%= link_to 'Show', picture_path(picture.id) %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) if picture.user.id == current_user.id %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: '本当に削除していいですか?' } if picture.user.id == current_user.id  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

